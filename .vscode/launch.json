{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch minirt basic ",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/minirt",
			"args": ["./scenes_examples/four_spheres.rt"],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			// "cwd": "${fileDirname}",
			// "cwd": "${userHome}",
//			"preLaunchTask": "make",
			"MIMode": "lldb"
		},
		{
			"name": "Debug minirt basic ",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/minirt",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
//			"cwd": "${fileDirname}",
//			"preLaunchTask": "make debug",
			"MIMode": "lldb"
		},
		{
			"name": "Debug basic",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/minirt",
			"args": [""],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
//			"cwd": "${fileDirname}",
//			"preLaunchTask": "make debug",
			"MIMode": "lldb"
		}/*,
		{
			"name": "Debug server",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/server",
			"args": ["test.txt"],
			"stopAtEntry": true,
			"cwd": "${fileDirname}",
			"preLaunchTask": "make debug",
			"MIMode": "lldb"
		},
		{
			"name": "(lldb) Attach server",
			"type": "lldb",
			"request": "attach",
			"program": "${workspaceFolder}/server",
			"processId": "${command:pickProcess}",
//			"MIMode": "lldb",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "(lldb) Launch +make debug",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/test",
			"args": ["text.txt"],
			"stopAtEntry": true,
			"cwd": "${fileDirname}",
			"preLaunchTask": "make debug"
		},

		{
			"name": "(lldb) Launch",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/test",
			"args": ["text.txt"],
			"stopAtEntry": true,
			"cwd": "${fileDirname}",
//			"environment": [],
//			"externalConsole": false,
//			"MIMode": "lldb"
		},
		{
			"type": "cppdbg",
			"request": "launch",
			"name": "Debug",
			"program": "${workspaceFolder}/test",
			"args": [],
			"cwd": "${workspaceFolder}"
		},
*//*
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall -Wextra -Werror -g3",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
*/
,		{
			"type": "lldb",
			"request": "launch",
			"name": "C/C++: lldb debug active file",
			"program": "${fileDirname}/${fileBasenameNoExtension}",
			"args": ["aaa", "bbb"],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "C/C++: gcc build active file"
		}
	]
}
